class FocalArray:			# Defines the property of a focal array.
	def __init__(self, name = "", Rf = 0.0, F = 0.0):
		self.name = name
		self.Rf = Rf
		self.F = F

BlankArray = FocalArray(
			name = "",
			Rf = 0.0,
			F = 0.0,
			)

Tiny = FocalArray(
			name = "Tiny",
			Rf = 0.1,
			F = 0.25,
			)

VerySmall = FocalArray(
			name = "Very small",
			Rf = 0.3,
			F = 0.5,
			)

Small = FocalArray(
			name = "Small",
			Rf = 0.5,
			F = 0.8,
			)

Medium = FocalArray(
			name = "Medium",
			Rf = 1.0,
			F = 1.0,
			)

Large = FocalArray(
			name = "Large",
			Rf = 2.0,
			F = 1.25,
			)

VeryLarge = FocalArray(
			name = "Very large",
			Rf = 4.0,
			F = 1.6,
			)

ExtraLarge = FocalArray(
			name = "Extra large",
			Rf = 8.0,
			F = 2.0,
			)

